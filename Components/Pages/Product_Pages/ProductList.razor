@page "/product"

@attribute [StreamRendering]
@rendermode InteractiveServer
@inject IProductRepository _productRepository
@inject NavigationManager _navigationManager
@inject IJSRuntime _JSRuntime

<BsModal Title="Delete Product" Message="@confirmMessage" ConfirmButtonText="Delete" ButtonBootstrapStyle="btn-danger"
    OnConfirm="ConfirmDelete" />
@if (IsProcessing)

{
    <div class="position-absolute w-75 h-75 d-flex flex-column justify-content-center align-items-center bg-white">
        <img src="/images/loading.gif" alt="Loading..." />
    </div>
}
else
{
    <div class="card-header bg-black bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 ">Product List</h2>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-12 text-end">
                    <a href="product/create" class="btn btn-lg btn-secondary" style="width: 250px;"><i
                            class="bi bi-plus-circle"></i>Add New Product</a>
                </div>
            </div>
            @if (Categories != null && Categories.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Tag</th>
                            <th>Category</th>
                            <th>Picture</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Categories)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Price</td>
                                <td>@product.SpecialTag</td>
                                <td>@product.Category?.Name</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" alt="@product.Name" class="img-thumbnail"
                                            style="width: 60px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No image</span>
                                    }
                                </td>
                                <td><a href="product/update/@product.Id" class="btn btn-sm btn-primary"><i
                                            class="bi bi-pencil"></i>Edit</a>
                                    <button class="btn btn-sm btn-danger"
                                        @onclick="() => ShowDeleteConfirmation(product.Id, product.Name)"><i
                                            class="bi bi-trash3"></i>Delete</button>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    No products available.
                </div>
            }
        </div>
    </div>
}

@code {
    public bool IsProcessing { get; set; } = true;
    private IEnumerable<Product> Categories { get; set; } = new List<Product>();
    private int productIdToDelete;
    private string confirmMessage = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadCategories();
            IsProcessing = false;
            StateHasChanged();
        }
    }

    private async Task ShowDeleteConfirmation(int id, string name)
    {
        productIdToDelete = id;
        confirmMessage = $"Are you sure you want to delete '{name}'?";
        await _JSRuntime.InvokeVoidAsync("ShowConfirmationModal");
    }

    private async Task ConfirmDelete()
    {
        IsProcessing = true;
        StateHasChanged();

        await _productRepository.DeleteAsync(productIdToDelete);
        await LoadCategories();

        IsProcessing = false;
        StateHasChanged();
    }

    private async Task LoadCategories()
    {
        Categories = await _productRepository.GetAllAsync();
    }
}
